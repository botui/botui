{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "module": "Node16",
    "allowJs": false,
    "declaration": true,
    "rootDir": "src/",
    "composite": true,
    "moduleResolution": "Node16",
    "lib": ["ES6", "DOM"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "types", "dist", "tests"]
}